{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "webworker"],
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}